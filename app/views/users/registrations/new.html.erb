<hr/>
<%= devise_error_messages! %>
<div class="col-lg-12">
  <div class="row">
    <div class="col-sm-6">
      <div class="signup-wrapper row">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <p class="lead">Create New Account!</p>

            <div class="form-group">
              <%= f.label :email %><br/>
              <%= f.email_field :email, autofocus: true, class: 'required form-control reset-border-radius' %>
            </div>

            <div class="form-group">
              <%= f.label :user_type, 'I am a' %><br/>
              <%= f.select :user_type, options_for_select(AppSettings::USER_TYPE.collect { |key, value| [value, key] }), {}, {class: 'required form-control reset-border-radius'} %>
            </div>

            <div class="form-group">
              <%= f.label :password %>
              <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br/>
              <%= f.password_field :password, autocomplete: "off", class: 'required form-control reset-border-radius' %>
            </div>

            <div class="form-group">
              <%= f.label :password_confirmation %><br/>
              <%= f.password_field :password_confirmation, autocomplete: "off", class: 'required form-control reset-border-radius' %>
            </div>

            <div class="actions">
              <%= f.submit "Sign up", class: 'btn btn-primary reset-border-radius' %>
            </div>
        <% end %>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="signin-wrapper row">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'login-form', remote: true) do |f| %>

            <p class="lead">Hello, Welcome Back!</p>

            <div class="form-group">
              <%= f.email_field :email, autofocus: true, class: 'required form-control reset-border-radius', placeholder: 'Username' %>
            </div>

            <div class="form-group">
              <%= f.password_field :password, autocomplete: "off", class: 'password required form-control reset-border-radius', placeholder: 'Password' %>
            </div>

            <div class="form-group">
              <label for="user_remember_me">
                <%= f.check_box :remember_me %>
                Remember Me
              </label>
            </div>

            <div class="form-group">
              <%= f.submit 'Log In', class: 'btn btn-primary reset-border-radius' %>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%#= render "users/shared/links" %>
