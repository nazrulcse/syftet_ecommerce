<table class="row header">
  <tr>
    <td>
      <p class="lede">
        <%= I18n.t('shipment_mailer.shipped_email.dear_customer') %>
      </p>
      <p>
        <%= I18n.t('shipment_mailer.shipped_email.instructions', number: @shipment.order.number) %>
      </p>
      <p>
        <%= I18n.t('shipment_mailer.shipped_email.shipment_summary') %>
      </p>
      <table class="container">
        <tr>
          <td class="wrapper last">
            <table class="twelve columns">
              <%= render collection: @shipment.manifest.map(&:line_item), partial: 'shared/mailer_line_item', as: :line_item %>
            </table>
          </td>
        </tr>
      </table>
      <p>
        <%= I18n.t('shipment_mailer.shipped_email.shipping_method', shipping_method: @shipment.shipping_method.name) %>
      </p>
      <% if @shipment.tracking %>
        <p>
          <%= I18n.t('shipment_mailer.shipped_email.track_information', tracking: @shipment.tracking) %>
        </p>
      <% end %>
      <% if @shipment.tracking_url %>
        <p>
          <%= I18n.t('shipment_mailer.shipped_email.track_link', url: link_to(@shipment.tracking_url, @shipment.tracking_url)).html_safe %>
        </p>
      <% end %>
      <p>
        <%= I18n.t('shipment_mailer.shipped_email.thanks') %>
      </p>
    </td>
    <td class="expander"></td>
  </tr>
</table>
