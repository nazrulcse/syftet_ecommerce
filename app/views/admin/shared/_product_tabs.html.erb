<% content_for :page_title do %>
    <%= link_to t(:products), admin_products_path %> /
    <%= @product.name %>
<% end %>

<% content_for :sidebar do %>
    <ul class="nav nav-pills nav-stacked" data-hook="admin_product_tabs">
      <%= content_tag :li, class: ('active' if current == :details) do %>
          <%= link_to_with_icon 'edit', t(:details), edit_admin_product_url(@product) %>
      <% end if can?(:admin, Product) %>
      <%= content_tag :li, class: ('active' if current == :images) do %>
          <%= link_to_with_icon 'picture', t(:images), admin_product_images_url(@product) %>
      <% end if can?(:admin, Image) %>
      <%= content_tag :li, class: ('active' if current == :variants) do %>
          <%= link_to_with_icon 'th-large', t(:variants), admin_product_variants_url(@product) %>
      <% end if can?(:admin, Variant) %>
      <%= content_tag :li, class: ('active' if current == :related_products) do %>
          <%= link_to_with_icon 'list-alt', t(:related_product), related_admin_product_url(@product) %>
      <% end if can?(:admin, RelatedProduct) %>
      <%= content_tag :li, class: ('active' if current == :review) do %>
          <%= link_to_with_icon 'star', t(:review_rating), admin_product_reviews_path(@product) %>
      <% end if can?(:admin, Review) %>
      <%= content_tag :li, class: ('active' if current == :stock) do %>
          <%= link_to_with_icon 'home', t(:stock), stock_admin_product_url(@product) %>
          <%# end if can?(:admin, Stock) %> <!-- TODO: need to active this line -->
      <% end if can?(:admin, Object) %>
    </ul>
<% end %>
