<div data-hook="admin_inside_taxonomy_form" class="form-group">
  <%= f.field_container :name, class: ['form-group'] do %>
      <%= f.label :name, t(:name) %> <span class="required">*</span>
      <%= f.text_field :name, :class => 'form-control' %>
      <%= f.error_message_on :name, :class => 'error-message' %>
  <% end %>

  <%= f.field_container :meta_title, class: ['form-group'] do %>
      <%= f.label :meta_title, t(:meta_title) %>
      <%= f.text_field :meta_title, :class => 'form-control' %>
  <% end %>

  <%= f.field_container :meta_description, class: ['form-group'] do %>
      <%= f.label :meta_description, t(:meta_description) %>
      <%= f.text_field :meta_description, :class => 'form-control' %>
  <% end %>

  <%= f.field_container :meta_key, class: ['form-group'] do %>
      <%= f.label :meta_key, t(:meta_key) %>
      <%= f.text_field :meta_key, :class => 'form-control' %>
  <% end %>
</div>
