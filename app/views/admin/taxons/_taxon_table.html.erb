<table class="table table-condensed table-bordered taxons-table">
  <thead>
  <tr data-hook="taxons_header">
    <th><%= t(:name) %></th>
    <th><%= t(:path) %></th>
    <th><%= t(:actions) %></th>
  </tr>
  </thead>
  <tbody>
  <% taxons.each do |taxon| %>
      <tr id="<%= spree_dom_id(taxon) %>" data-hook="taxons_row">
        <td colspan="3">
          <%= raw draw_taxon_tree(taxon) %>
        </td>
      </tr>
  <% end %>
  <% if taxons.empty? %>
      <tr data-hook="taxons_none">
        <td colspan="3"><%= t(:none) %>.</td>
      </tr>
  <% end %>
  </tbody>
</table>
