<% content_for :page_title do %>
    <%= link_to t(:reports), admin_reports_url %> /
    <%= t(:sales_totals) %>
<% end %>

<div class="well">
  <%= render :partial => 'admin/shared/report_order_criteria' %>
</div>

<table class="table table-bordered admin-report" data-hook="sales_total">
  <thead>
  <tr>
    <th><%= t(:currency) %></th>
    <th><%= t(:item_total) %></th>
    <th><%= t(:adjustment_total) %></th>
    <th><%= t(:sales_total) %></th>
  </tr>
  </thead>
  <tbody>
  <% @totals.each do |key, row| %>
      <tr>
        <td><%= key %></td>
        <td><%= Money.new(row[:item_total], {currency: key}).to_display %></td>
        <td><%= Money.new(row[:adjustment_total], {currency: key}).to_display %></td>
        <td><%= Money.new(row[:sales_total], {currency: key}).to_display %></td>
      </tr>
  <% end %>
  </tbody>
</table>
