<section id="opal-topbar" class="opal-topbar hidden-xs hidden-sm">

  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 info">

        <div class="telephone">

          <span class="space-right-5">
            <i class="fa fa-phone-square" aria-hidden="true"></i>
            <%= t(:call_support) %>
          </span>

          <span class="phone-number">123345667</span>

        </div>

        <aside id="text-2" class="widget-topbar clearfix widget_text">
          <div class="textwidget"><%= t(:free_shipping_text) %></div>
        </aside>
      </div>
      <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">

        <div class="topmenu pull-right hidden-xs hidden-sm">
          <div class="menu-top-menu-header-container">
            <ul id="main-topmenu">
              <li class="menu-item ">
                <a href="http://venusdemo.com/wordpress/pi/my-account/"><%= t(:my_account) %></a>
              </li>
              <li class="menu-item">
                <a href="http://venusdemo.com/wordpress/pi/checkout/"><%= t(:checkout) %></a>
              </li>
            </ul>
          </div>
        </div>
        <div class="top-account pull-right hidden-xs hidden-sm">

          <ul class="list-style">

            <li>
              <a href="#" data-toggle="modal" data-target="#modalLoginForm" class="syftet-user-login">
                <span class="fa fa-user"></span>
                <%= t(:login) %>
              </a>
            </li>
            <li>
              <a href="http://venusdemo.com/wordpress/pi/my-account/" class="syftet-user-register">
                <span class="fa fa-pencil"></span>
                <%= t(:registration) %>
              </a>
            </li>
          </ul>

        </div>

      </div>
    </div>
  </div>
</section>